FROM node:14.1-alpine AS base
RUN apk add make openjdk8
ENV JAVA_HOME=/usr/lib/jvm/java-1.8-openjdk
ENV PATH="$JAVA_HOME/bin:${PATH}"

FROM base AS build
RUN apk --no-cache add git openssh-client python g++
RUN mkdir /app
WORKDIR /app
COPY package*.json .npmrc /app/

# Setup git
ARG GIT_SSH_KEY
RUN mkdir /root/.ssh/
RUN echo "${GIT_SSH_KEY}" > /root/.ssh/id_rsa
RUN chmod 0400 /root/.ssh/id_rsa
RUN touch /root/.ssh/known_hosts
RUN ssh-keyscan github.com >> /root/.ssh/known_hosts

# Setup NPM
ARG GITHUB_NPM_TOKEN
RUN echo "//npm.pkg.github.com/:_authToken=${GITHUB_NPM_TOKEN}" >> .npmrc

# Build
RUN npm ci --production
RUN cp -r /app/node_modules /prod_node_modules
RUN npm ci
COPY . /app/
RUN npm run build:client:release

FROM base
COPY --from=build /app /app
WORKDIR /app

CMD ["make", "server"]
